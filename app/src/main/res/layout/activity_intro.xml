<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_picture">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="#DFFFFFFF"
            app:cardCornerRadius="40dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/good_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Good Food"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/good_food"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Nutricionaly balanced, easy to cook recipes. Quality fresh local ingridients"
                    android:textSize="16sp" />

                <Button
                    android:textColor="@color/white"
                    android:id="@+id/bt_create_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/button_background"
                    android:text="Create Account" />

                <TextView
                    android:id="@+id/txt_log_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_create_account"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Already have account? Log In" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>